          <slide sNumber="5110" type="Activity_MultipleChoice" animType="none" endType="Continue">
           <ui uid="1" type="act" atype="mc" x="left" y="top" margin="10" trans="slideUp" ease="QuintEaseOut" xPad="10" yPad="10">
