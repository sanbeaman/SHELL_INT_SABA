package com.sanbeaman.shell.events{	import flash.events.Event;		public class WidgetEvent extends Event	{		public static const TIMELINE_EVENT:String = "timelineEvent";		public static const C2R_EVENT:String = "c2rEvent";		private var _eventAction:String;		private var _eventIndex:int;		private var _eventInfo:String;		public function get eventAction():String {			return _eventAction;		}				public function set eventAction(value:String):void {			_eventAction = value;		}				public function get eventIndex():int		{			return _eventIndex;		}		public function set eventIndex(value:int):void		{			_eventIndex = value;		}			public function get eventInfo():String {			return _eventInfo;		}				public function set eventInfo(value:String):void {			_eventInfo = value;		}		/**		 * Constructor		 * @param	type			(String) the event type		 * @param	eventAction			(String) the specific event action		 *  @param	eventInfo			(String) additional info related to eventAcion		 * @param	bubbles		(Boolean) does the event bubble? Defaults to false		 * @param	cancelable	(Boolean) can the event be canceled? Defaults to false		 * @return	ShellControlEvent		 */		public function WidgetEvent(type:String,eventAction:String = null,eventIndex:int = 0, eventInfo:String = null, bubbles:Boolean=false, cancelable:Boolean=false)		{			super(type, bubbles, cancelable);			_eventAction = eventAction;			_eventIndex = eventIndex;			_eventInfo = eventInfo;		}				override public function toString():String {			return formatToString("WidgetEvent", "type","eventAction","eventIndex","eventinfo" ,"bubbles", "cancelable");		}				/**		 * Clones the event		 * 		 * @return	Event		 */		override public function clone():Event		{			return new WidgetEvent( type,eventAction,eventIndex,eventInfo, bubbles, cancelable );		}	}}